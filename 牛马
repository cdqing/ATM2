结构帐户
{
字符名称[100];
字符密码[7];
字符用户名[19];
字符 ID 卡[19];
字符 tel[12];
浮动货币;
结构帐户* 下一个;
};
类型定义结构帐户帐户;
国际语言;//1-中文，2-英语
Account* head=NULL;//指向头结点的指针
Account* tail=NULL;//指向尾结点的指针
void signIn（）//登录
{
	
}
void signUp（）//注册
{
申请一块堆内存空间，将其地址赋值给指针newNode（创建节点）
Account* newNode=（Account*）malloc（sizeof（Account））;
结点赋值
如果（语言==1）
	{
printf（“请输入姓名：\n”）;
scanf（“%s”，newNode->name）;
printf（“请输入密码：\n”）;
scanf（“%s”，newNode->password）;
printf（“请输入账号：\n”）;
scanf（“%s”，newNode->用户名）;
printf（“请输入身份证：\n”）;
scanf（“%s”，newNode->idCard）;
printf（“请输入电话：\n”）;
scanf（“%s”，newNode->tel）;
    }
else if（language==2）
	{
printf（“输入您的姓名：\n”）;
scanf（“%s”，newNode->name）;
printf（“输入您的代码：\n”）;
scanf（“%s”，newNode->password）;
printf（“输入您的帐户：\n”）;
scanf（“%s”，newNode->用户名）;
printf（“输入您的身份证：\n”）;
scanf（“%s”，newNode->idCard）;
printf（“输入您的电话：\n”）;
scanf（“%s”，newNode->tel）;
	}
newNode->money=0.0f;
newNode->next=NULL;
添加结点到链表
if（head==NULL）
	{
head=newNode;
tail=newNode;
	}
还
	{
tail->next=newNode;
tail=newNode;
	}
printf（“创建成功\n”）;
 } 
